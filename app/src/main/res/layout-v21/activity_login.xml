<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/activity_background"
    android:orientation="vertical"
    tools:context=".u.a.st.LoginActivity">

    <TextView
        android:id="@+id/textviewPin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/pin"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/windowBackground"

        android:textSize="100sp"
        android:textStyle="bold"
        android:textColorHint="@color/windowBackground"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"

        android:layout_weight="2"
        android:layout_margin="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="1"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                 />

            <Button
                android:id="@+id/btn2"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="2"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                />

            <Button
                android:id="@+id/btn3"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="3"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"

                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="4"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"

                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                 />

            <Button
                android:id="@+id/btn5"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="5"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"

                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                />

            <Button
                android:id="@+id/btn6"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="6"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"

                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="7"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                />

            <Button
                android:id="@+id/btn8"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="8"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                />

            <Button
                android:id="@+id/btn9"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="9"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnC"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/windowBackground"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_clear_keyboard"
                android:tint="@color/whiteBackground" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                 />

            <Button
                android:id="@+id/btn0"

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="0"
                android:textColor="@color/windowBackground"
                android:textSize="30sp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                 />

            <ImageButton
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnX"
                android:layout_weight="1"
                android:rotation="180"
                android:src="@drawable/ic_backspace_vector"

                android:tint="@color/whiteBackground"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>





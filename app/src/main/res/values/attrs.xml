<resources>
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircularProgressLabel">
        <attr name="boundaryColor" format="color|reference" />
        <attr name="innerBackground" format="color|reference" />
        <attr name="outerBackground" format="color|reference" />
        <attr name="labelColor" format="color"/>
        <attr name="boundary_size" format="dimension|reference" />
        <attr name="max" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="use_percentage" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BorderedButton">
        <attr name="borderColor" format="color|reference" />
        <attr name="borderRadius" format="dimension|reference" />
        <attr name="smoothCorners" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CircleNumberedLabel">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>
</resources>
